<Page x:Class="CarlisleApp.Pages.ViewItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarlisleApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="800"
      Title="ViewItems">

    <Grid Background="CadetBlue">
        <StackPanel Orientation="Vertical">
        <DataGrid x:Name="dgItems" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Attribute" Binding="{Binding AttributesText}"/>
            </DataGrid.Columns>
        </DataGrid>
            <Button Content="Exit" 
                            Margin="5"
                        Grid.Column="2"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>
